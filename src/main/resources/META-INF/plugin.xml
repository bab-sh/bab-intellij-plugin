<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>sh.bab.plugin</id>
    <name>bab</name>
    <vendor email="support@bab.sh" url="https://bab.sh">bab-sh</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.plugins.yaml</depends>
    <depends>com.intellij.modules.json</depends>

    <resource-bundle>messages.BabBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <fileType
            name="Babfile"
            implementationClass="sh.bab.plugin.filetype.BabFileType"
            fieldName="INSTANCE"
            language="yaml"
            fileNamesCaseInsensitive="babfile.yml;babfile.yaml"/>

        <psi.referenceContributor
            language="yaml"
            implementation="sh.bab.plugin.references.BabTaskReferenceContributor"/>

        <completion.contributor
            language="yaml"
            implementationClass="sh.bab.plugin.completion.BabTaskCompletionContributor"/>

        <localInspection
            language="yaml"
            shortName="BabUnresolvedTaskReference"
            bundle="messages.BabBundle"
            key="inspection.unresolved.task.reference.name"
            groupBundle="messages.BabBundle"
            groupKey="inspection.group.name"
            enabledByDefault="true"
            level="ERROR"
            implementationClass="sh.bab.plugin.inspections.BabUnresolvedTaskReferenceInspection"/>
    </extensions>

    <extensions defaultExtensionNs="JavaScript.JsonSchema">
        <ProviderFactory
            implementation="sh.bab.plugin.schema.BabSchemaProviderFactory"/>
    </extensions>
</idea-plugin>

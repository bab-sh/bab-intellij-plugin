<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>sh.bab.plugin</id>
    <name>Bab</name>
    <vendor email="support@bab.sh" url="https://bab.sh">bab-sh</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.plugins.yaml</depends>
    <depends>com.intellij.modules.json</depends>

    <resource-bundle>messages.BabBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup id="Bab Notifications"
                           displayType="BALLOON"
                           bundle="messages.BabBundle"
                           key="notification.group.bab"/>

        <fileType
            name="Babfile"
            implementationClass="sh.bab.plugin.filetype.BabFileType"
            language="yaml"
            fileNamesCaseInsensitive="babfile.yml;babfile.yaml"/>

        <fileTypeOverrider
            implementation="sh.bab.plugin.filetype.BabFileTypeOverrider"/>

        <psi.referenceContributor
            language="yaml"
            implementation="sh.bab.plugin.references.BabTaskReferenceContributor"/>

        <psi.referenceContributor
            language="yaml"
            implementation="sh.bab.plugin.references.BabIncludeFileReferenceContributor"/>

        <completion.contributor
            language="yaml"
            implementationClass="sh.bab.plugin.completion.BabTaskCompletionContributor"/>

        <localInspection
            language="yaml"
            shortName="BabUnresolvedTaskReference"
            bundle="messages.BabBundle"
            key="inspection.unresolved.task.reference.name"
            groupBundle="messages.BabBundle"
            groupKey="inspection.group.name"
            enabledByDefault="true"
            level="ERROR"
            implementationClass="sh.bab.plugin.inspections.BabUnresolvedTaskReferenceInspection"/>

        <toolWindow
            id="Bab"
            anchor="right"
            icon="/icons/bab.svg"
            factoryClass="sh.bab.plugin.toolwindow.BabToolWindowFactory"/>

        <projectService serviceImplementation="sh.bab.plugin.settings.BabSettings"/>

        <projectConfigurable
            parentId="tools"
            instance="sh.bab.plugin.settings.BabSettingsConfigurable"
            id="sh.bab.plugin.settings"
            displayName="Bab"
            nonDefaultProject="true"/>

        <configurationType implementation="sh.bab.plugin.run.BabRunConfigurationType"/>

        <runConfigurationProducer implementation="sh.bab.plugin.run.BabRunConfigurationProducer"/>

        <runLineMarkerContributor
            language="yaml"
            implementationClass="sh.bab.plugin.run.BabRunLineMarkerContributor"/>

        <postStartupActivity implementation="sh.bab.plugin.BabProjectActivity"/>

        <annotator
            language="yaml"
            implementationClass="sh.bab.plugin.highlighting.BabAnnotator"/>

        <colorSettingsPage
            implementation="sh.bab.plugin.highlighting.BabColorSettingsPage"/>

        <additionalTextAttributes scheme="Darcula" file="colorSchemes/BabDark.xml"/>
        <additionalTextAttributes scheme="Default" file="colorSchemes/BabLight.xml"/>
        <additionalTextAttributes scheme="IntelliJ Light" file="colorSchemes/BabLight.xml"/>
        <additionalTextAttributes scheme="High contrast" file="colorSchemes/BabDark.xml"/>
    </extensions>

    <extensions defaultExtensionNs="JavaScript.JsonSchema">
        <ProviderFactory implementation="sh.bab.plugin.schema.BabSchemaProviderFactory"/>
    </extensions>
</idea-plugin>

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://bab.sh/schema/babfile.schema.json",
  "$defs": {
    "Include": {
      "properties": {
        "babfile": {
          "type": "string",
          "minLength": 1,
          "pattern": ".*[Bb]abfile(\\..*)?\\.(ya?ml)$",
          "description": "Path to babfile"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "babfile"
      ],
      "description": "External babfile reference"
    },
    "Platform": {
      "type": "string",
      "enum": [
        "linux",
        "darwin",
        "windows"
      ],
      "description": "Target operating system"
    },
    "Task": {
      "properties": {
        "desc": {
          "type": "string",
          "description": "Task description"
        },
        "env": {
          "additionalProperties": {
            "type": "string"
          },
          "type": "object",
          "description": "Environment variables as key-value pairs"
        },
        "deps": {
          "items": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9_-]+(:[a-zA-Z0-9_-]+)*$",
            "description": "Task name to depend on"
          },
          "type": "array",
          "uniqueItems": true,
          "description": "Tasks to run first"
        },
        "run": {
          "items": {
            "oneOf": [
              {
                "properties": {
                  "cmd": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Shell command to execute"
                  },
                  "env": {
                    "additionalProperties": {
                      "type": "string"
                    },
                    "type": "object",
                    "description": "Environment variables as key-value pairs"
                  },
                  "platforms": {
                    "items": {
                      "$ref": "#/$defs/Platform"
                    },
                    "type": "array",
                    "uniqueItems": true,
                    "description": "Run only on specified platforms"
                  }
                },
                "additionalProperties": false,
                "type": "object",
                "required": [
                  "cmd"
                ],
                "description": "Shell command"
              },
              {
                "properties": {
                  "task": {
                    "type": "string",
                    "minLength": 1,
                    "pattern": "^[a-zA-Z0-9_-]+(:[a-zA-Z0-9_-]+)*$",
                    "description": "Task reference"
                  },
                  "platforms": {
                    "items": {
                      "$ref": "#/$defs/Platform"
                    },
                    "type": "array",
                    "uniqueItems": true,
                    "description": "Run only on specified platforms"
                  }
                },
                "additionalProperties": false,
                "type": "object",
                "required": [
                  "task"
                ],
                "description": "Task reference"
              },
              {
                "properties": {
                  "log": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Log message to display"
                  },
                  "level": {
                    "type": "string",
                    "enum": [
                      "debug",
                      "info",
                      "warn",
                      "error"
                    ],
                    "description": "Log level (debug, info, warn, error)",
                    "default": "info"
                  },
                  "platforms": {
                    "items": {
                      "$ref": "#/$defs/Platform"
                    },
                    "type": "array",
                    "uniqueItems": true,
                    "description": "Run only on specified platforms"
                  }
                },
                "additionalProperties": false,
                "type": "object",
                "required": [
                  "log"
                ],
                "description": "Log message"
              }
            ]
          },
          "type": "array",
          "minItems": 1,
          "description": "Commands or tasks to execute"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "description": "Task definition"
    },
    "TaskName": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+(:[a-zA-Z0-9_-]+)*$",
      "description": "Task name (alphanumeric, hyphens, underscores, colons for namespacing)"
    }
  },
  "properties": {
    "env": {
      "additionalProperties": {
        "type": "string"
      },
      "type": "object",
      "description": "Environment variables as key-value pairs"
    },
    "includes": {
      "additionalProperties": {
        "$ref": "#/$defs/Include"
      },
      "propertyNames": {
        "pattern": "^[a-zA-Z0-9_-]+(:[a-zA-Z0-9_-]+)*$"
      },
      "type": "object",
      "description": "External babfiles to import"
    },
    "tasks": {
      "additionalProperties": {
        "$ref": "#/$defs/Task"
      },
      "propertyNames": {
        "pattern": "^[a-zA-Z0-9_-]+(:[a-zA-Z0-9_-]+)*$"
      },
      "type": "object",
      "minProperties": 1,
      "description": "Task definitions"
    }
  },
  "additionalProperties": false,
  "type": "object",
  "required": [
    "tasks"
  ],
  "title": "Babfile Schema",
  "description": "Schema for Babfile task runner configuration (https://bab.sh)"
}

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://bab.sh/schema/babfile.json",
  "$ref": "#/$defs/Schema",
  "$defs": {
    "Include": {
      "properties": {
        "babfile": {
          "type": "string",
          "minLength": 1,
          "pattern": ".*babfile(\\..*)?\\.(ya?ml)$",
          "description": "Path to babfile"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "babfile"
      ],
      "description": "External babfile reference"
    },
    "Platform": {
      "type": "string",
      "enum": [
        "linux",
        "darwin",
        "windows"
      ],
      "description": "Target operating system"
    },
    "Schema": {
      "properties": {
        "includes": {
          "additionalProperties": {
            "$ref": "#/$defs/Include"
          },
          "propertyNames": {
            "pattern": "^[a-zA-Z0-9_-]+(:[a-zA-Z0-9_-]+)*$"
          },
          "type": "object",
          "description": "External babfiles to import"
        },
        "tasks": {
          "additionalProperties": {
            "$ref": "#/$defs/Task"
          },
          "propertyNames": {
            "pattern": "^[a-zA-Z0-9_-]+(:[a-zA-Z0-9_-]+)*$"
          },
          "type": "object",
          "minProperties": 1,
          "description": "Task definitions"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "tasks"
      ],
      "description": "Babfile configuration"
    },
    "Task": {
      "properties": {
        "desc": {
          "type": "string",
          "description": "Task description"
        },
        "deps": {
          "items": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9_-]+(:[a-zA-Z0-9_-]+)*$"
          },
          "type": "array",
          "uniqueItems": true,
          "description": "Tasks to run first"
        },
        "run": {
          "items": {
            "oneOf": [
              {
                "properties": {
                  "cmd": {
                    "type": "string",
                    "minLength": 1,
                    "description": "Shell command to execute"
                  },
                  "platforms": {
                    "items": {
                      "$ref": "#/$defs/Platform"
                    },
                    "type": "array",
                    "uniqueItems": true,
                    "description": "Run only on specified platforms"
                  }
                },
                "additionalProperties": false,
                "type": "object",
                "required": [
                  "cmd"
                ],
                "description": "Shell command"
              },
              {
                "properties": {
                  "task": {
                    "type": "string",
                    "minLength": 1,
                    "pattern": "^[a-zA-Z0-9_-]+(:[a-zA-Z0-9_-]+)*$",
                    "description": "Task reference"
                  },
                  "platforms": {
                    "items": {
                      "$ref": "#/$defs/Platform"
                    },
                    "type": "array",
                    "uniqueItems": true,
                    "description": "Run only on specified platforms"
                  }
                },
                "additionalProperties": false,
                "type": "object",
                "required": [
                  "task"
                ],
                "description": "Task reference"
              }
            ]
          },
          "type": "array",
          "description": "Commands or tasks to execute"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "description": "Task definition"
    }
  },
  "title": "Babfile Schema",
  "description": "Schema for Babfile task runner configuration (https://bab.sh)"
}
